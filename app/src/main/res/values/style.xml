<resources xmlns:tools="http://schemas.android.com/tools">

    <!--    ================================================================================-->
    <!--     CardView -->
    <!--    ================================================================================-->


    <style name="CardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="cardCornerRadius">10dp</item>
        <item name="android:elevation">0dp</item>
        <item name="cardElevation">0dp</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="contentPaddingBottom">8dp</item>
        <item name="contentPaddingLeft">8dp</item>
        <item name="contentPaddingRight">8dp</item>
        <item name="contentPaddingTop">8dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <style name="ButtonRoundSolid" parent="Widget.MaterialComponents.Button">
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingEnd">14dp</item>
        <item name="android:paddingStart">14dp</item>
        <item name="android:paddingBottom">7dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:maxWidth">400dp</item>
        <item name="android:background">@null</item>
        <item name="android:backgroundTint">@color/purple_200</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="cornerRadius">20dp</item>
    </style>

    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/teal_700</item>
        <item name="android:lineSpacingExtra">2sp</item>
    </style>

</resources>