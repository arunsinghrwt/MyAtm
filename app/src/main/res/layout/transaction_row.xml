<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="transaction"
            type="com.arun.myatm.model.TransactionListModel" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/atm_amt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:text="@{transaction.atmAmt}"
            android:textAlignment="center"
            android:textSize="12dp">

        </TextView>

        <TextView
            android:id="@+id/hundred_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@{transaction.oneH}"
            android:textAlignment="center"
            android:textSize="12dp">

        </TextView>

        <TextView
            android:id="@+id/five_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{transaction.twoH}"
            android:layout_weight="1"

            android:textAlignment="center"
            android:textSize="12dp">

        </TextView>

        <TextView
            android:id="@+id/thou_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@{transaction.fiveH}"
            android:textAlignment="center"
            android:textSize="12dp">

        </TextView>

        <TextView
            android:id="@+id/twoThous_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@{transaction.twok}"
            android:textAlignment="center"
            android:textSize="12dp">

        </TextView>

    </LinearLayout>

</layout>